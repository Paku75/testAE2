{% extends 'base.html.twig' %}

{% form_theme formForum 'bootstrap_4_layout.html.twig' %}

{% block body %}
 <div class="page-wrapper">
            <div class="content container-fluid">
    {% if editMode %}
        <h1>Modifier un forum</h1>
    {% else %}
        <h1>Cr√©er un forum</h1>
    {% endif %}

    {{ form_start(formForum) }}

    {{ form_row(formForum.NOM, {'attr': {'placeholder': "Titre de l'forum"}}) }}
    {{ form_row(formForum.DESCRIPTION, {'attr': {'placeholder': "Contenu de l'forum"}}) }}
